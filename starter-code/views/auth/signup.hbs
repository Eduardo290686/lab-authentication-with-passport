<form action="/signup" method="POST" id="form-container">

  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow" class="text-input">

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password" class="text-input">

  {{#if message}}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>